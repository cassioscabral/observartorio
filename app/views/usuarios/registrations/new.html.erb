<div id="login_box">
  <h2>Registre-se</h2>

  <div class="content">

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="fields">
          <%= f.label :nome, "Nome" %>
          <%= f.text_field :nome, :class => "input" %>
        </div>

        <div class="fields">
          <%= f.label :email, "E-mail" %>
          <%= f.email_field :email, :class => "input" %>
        </div>

        <div class="fields">
          <%= f.label :password, "Senha" %>
          <%= f.password_field :password, :class => "input" %>
        </div>

        <div class="fields">
          <%= f.label :password_confirmation, "ConfirmaÃ§Ã£o da Senha" %>
          <%= f.password_field :password_confirmation, :class => "input" %>
        </div>

        <br/>

        <div class="fields"><%= f.submit "Registrar-se", :class => "button" %></div>

    <% end %>

    <br/>

    <%= render "usuarios/links" %>
  </div>
</div>